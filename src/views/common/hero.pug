section.hero
    .hero__container
        -
            var socials = [
            ['vk', 'http://vk.com'],
            ['github', 'http://gh.com'],
            ['in', 'http://in.com']
            ]
        .hero__links
            ul.socials
                each item in socials
                    li.socials__item
                        a(href=`${item[1]}`).socials__link
                            +icon(item[0], 'socials__link-icon')
        .hero__title
            img(src="./assets/images/hero/portfolio-header.png", alt="Портфолио").hero-title__pic

            .user.hero__user
                .user__pic
                    img(src="./assets/images/hero/user.jpg", alt="Пользователь").user__pic-img
                .user__description
                    .user__name Владимир Астахов
                    .user__info Личный сайт разработчика
        .hero__menu
            a(href="").hamburger

        a(href="#").down-btn.hero__down-btn
            svg.down-btn__svg
                use(xlink:href='./assets/images/icons/sprite.svg#arrow_down')
